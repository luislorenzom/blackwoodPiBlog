<div class="row" style="margin-bottom: 30px;">
  <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @article, local: true) do |form| %>
            
            <!-- FeedBack panel -->
            <% if @article.errors.any? %>
                <div id="error_explanation">
                    <h2 class="alert alert-danger">
                        <%= pluralize(@article.errors.count, "error") %> prohibited
                        this article from being saved:
                    </h2>
                    <ul>
                        <% @article.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <!-- Article title -->
            <p>
                <%= form.label :title %><br>
                <%= form.text_field :title, class: 'form-control' %>
            </p>

            <!-- Article text -->
            <p>
                <%= form.label :text %><br>
                <%= form.text_area :text, class: 'form-control', rows: "17" %>
            </p>
            

            <!-- Tags -->
            <div>
                <b><%= form.label :tags %></b>
                <div id="master_div">
                        <div id="input_autocomplete">
                            <input id="tag-input" autocomplete="off" type="text" value="" class="form-control"/>
                        </div>
                        <div id="categories"></div>
                </div>
                <%= text_field_tag 'tags', @tags, class: 'form-control invisible', 'data-role'=>'tagsinput' %>
            </div>

            <!-- Published checkbox -->
            <p>
                <%= form.label :publish %>
                <%= form.check_box :enabled %>
            </p>

            <!-- Submit -->
            <p>
                <%= form.submit class: 'form-control btn btn-success' %>
            </p>
        <% end %>
    </div>
</div>